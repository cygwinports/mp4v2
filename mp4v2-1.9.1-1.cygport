DESCRIPTION="MPEG-4 audio/video library and tools"
HOMEPAGE="http://code.google.com/p/mp4v2/"
SRC_URI="http://mp4v2.googlecode.com/files/${P}.tar.bz2"
PATCH_URI="1.9.1-build-cygwin.patch"

PKG_NAMES="${PN} lib${PN}_1 lib${PN}-devel"
mp4v2_CONTENTS="usr/bin/*.exe usr/share/"
libmp4v2_1_CONTENTS="usr/bin/cygmp4v2-1.dll"
libmp4v2_devel_CONTENTS="usr/include/ usr/lib/"

DIFF_EXCLUDES="project.h project.m4"

CYGCONF_ARGS="
	--disable-debug
	--disable-fvisibility
	--disable-gch
"
